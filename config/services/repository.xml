<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="app.repository_engine">%env(REPOSITORY_ENGINE)%</parameter>
    </parameters>

    <services>
        <service id="app.entity_repository_config" class="App\Model\Repository\EntityRepositoryConfig" lazy="true">
            <argument>%app.repository_engine%</argument>
        </service>
        <service id="app.entity_repository" class="App\Repository\EntityRepository" abstract="true">
            <argument type="service" id="app.entity_repository_config"/>
        </service>
    </services>
</container>